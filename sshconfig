Host *
    ControlMaster auto
    ControlPath ~/.ssh/ssh-%r@%h:%p
    ControlPersist 4h

host desktop
    hostname 192.168.0.125
    user brian

host media
    hostname media.lan
    user root

host ro.lan
    hostname ro.lan
    port 2220
    IdentityFile /home/brian/.ssh/brian_rsa

host router 
    hostname router.lan
    port 2220
    user root
    IdentityFile /home/brian/.ssh/ro.lan_rsa

host github.com
    hostname github.com
    IdentityFile /home/brian/.ssh/github_rsa

host bcmilco.homelinux.org
    hostname bcmilco.homelinux.org
    user brian
    IdentityFile /home/brian/.ssh/brian_rsa

